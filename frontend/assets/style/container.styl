.container
  width: 960px
  display: flex
  margin: 0 auto

.container--separated
  justify-content space-between

.container--centred
  justify-content: center
  align-items: center
  width: 100%
  height: 100%

.container--v-centred
  align-items: center

.container--modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%


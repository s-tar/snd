.pagination__page
  color: #788378
  min-width: $paginator-height
  height: 100%
  background: transparent
  border: none
  outline: none
  border-left: 1px solid #38402b
  cursor: pointer

.pagination__page:first-child
  border-left: 0

.pagination__page--selected
  background-color: #2c9556
  color: #000

.pagination__page--inactive
  cursor: default

.pagination__page--disabled
  color: #555
  cursor: default

.form__col
  width: 100%
  margin: 0 10px

.form__row:first-child
  margin-left: 0

.form__col--compact
  width: auto

.form__col--align-right
  text-align: right

.form__col--align-stretch
  display: flex
  justify-content: space-between

.form__col--valign-center
  align-items: center

@media only screen and (max-width: $tablet-max-width)
  .form__col
    margin: 5px
    width: auto
